<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="Contact">
   <!-- parameterType="com.green.contact.dto.ContactDTO"를 입력하지만 별칭을 작성하여 사용한다.  -->
    <insert id="insert" parameterType="contact">
        insert into contact(cName, cPhone, cAddress, cEmail, cNote)
        values (#{cName}, #{cPhone}, #{cAddress}, #{cEmail}, #{cNote})
    </insert>
    
    <select id="findAll" resultType="contact">
        select * from contact
    </select>
    
    <select id="findBycNo" parameterType="int" resultType="contact">
        select * from contact where cNo=#{cNo}
    </select>
    
    <delete id="delete" parameterType="int">
        delete from contact where cNo=#{cNo}
    </delete>
    
    <update id="update" parameterType="contact">
        update contact set cName=#{cName}, cPhone=#{cPhone}, cAddress=#{cAddress}, cEmail=#{cEmail}, cNote=#{cNote}
        where cNo=#{cNo}
    </update>
    
    
</mapper>  
        